<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Página de Venta de Fundas" />
    <meta name="author" content="WEBLY" />
    <title>@ViewBag.Title - WEBLY</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("FunCase", "Index", "Home", null, htmlAttributes: new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsMenu" aria-controls="navbarsMenu" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Home", null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sobre Nosotros", "About", "Home", null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contacto", "Contact", "Home", null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Diseñador"))
                        {
                            <li class="nav-item">@Html.ActionLink("Catalogo", "Index", "Productos", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Mis datos", "Index", "Designer", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Mis imágenes", "Index", "Designer", null, htmlAttributes: new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Cliente"))
                        {
                            <li class="nav-item">@Html.ActionLink("Catalogo", "Index", "Productos", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Mis datos", "Index", "Cliente", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Mis compras", "Index", "Cliente", null, htmlAttributes: new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">@Html.ActionLink("Clientes", "Index", "Cliente", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "UsersAdmin", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Roles", "Index", "RolesAdmin", null, htmlAttributes: new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Empleado"))
                        {
                            <li class="nav-item">@Html.ActionLink("Productos", "Index", "Productos", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Marcas", "Index", "Marcas", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Modelos", "Index", "Modeloes", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Materiales", "Index", "Material", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Ventas", "Index", "Ventas", null, htmlAttributes: new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Clientes", "Index", "Cliente", null, htmlAttributes: new { @class = "nav-link" })</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <section class="page-section" style="margin-top: 30px;">
        <div class="container" style="margin-top: 30px;">
            @RenderBody()
            <hr />
            <footer class="footer text-center">
                <p>&copy; @DateTime.Now.Year - Copyright: FunCase.com</p>
            </footer>
        </div>
    </section>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/scripts.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
