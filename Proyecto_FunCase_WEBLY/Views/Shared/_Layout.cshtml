<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WEBLY</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="page-top">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <nav class="navbar navbar-expand-lg navbar-light fixed-top shadow-sm" id="mainNav" style=" background-color: #76448A  ">
            <div class="container px-5" style="font-style: italic">
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto me-4 my-3 my-lg-0">
                        <img src="~/img/logo.jpg" width="60px" height="50px" alt="imgf" />
                        @Html.ActionLink("  WEBLY", "Index", "Home", null, new { @class = "navbar-brand active" })
                        @Html.ActionLink("Nosotros", "About", "Home", null, new { @class = "navbar-brand active" })
                        @Html.ActionLink("Contáctanos", "Contact", "Home", null, new { @class = "navbar-brand active" })
                    </ul>
                </div>
            </div>
        </nav>
        


            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Pág. Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin")) {
                        <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                    }

                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Productos", "Index", "Productos")</li>
                        <li>@Html.ActionLink("Ventas", "Index", "Ventas")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Cliente"))
                    {
                        <li>@Html.ActionLink("Comprar", "Index", "Productos")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Copyright: FunCase.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
  
    @RenderSection("scripts", required: false)
</body>
</html>
