@model Proyecto_FunCase_WEBLY.Models.Imagen

@{
    ViewBag.Title = "Editar";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Editar</h3>
                <p class="text-subtitle text-muted">Cambiar mi diseño.</p>
            </div>
        </div>
    </div>
</div>

<section>
    <div class="row match-height">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>Ingrese los datos</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">

                        @using (Html.BeginForm("Edit", "Modeloes", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ImagenID)
                                <div class="row">
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.NombreImagen)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.EditorFor(model => model.NombreImagen, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NombreImagen, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Estatus)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.EditorFor(model => model.Estatus, new { @class = "form-check-input" })
                                        @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Ruta)
                                        <p class="form-text">Eliga un archivo solo si desea cambiar la imagen</p>
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        <input type="file" id="File" name="File" class="form-control" />
                                        @Html.HiddenFor(model => model.Ruta)
                                        @Html.ValidationMessageFor(model => model.Ruta, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-12 d-flex justify-content-end">
                                        @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-light-secondary rounded-pill me-1 mb-1" })
                                        <button type="submit" class="btn btn-primary rounded-pill me-1 mb-1">Guardar</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Diseño</h4>
                </div>

                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12" style="text-align: center;">
                                <img src="@Model.Ruta" alt="Imagen del Modelo" style="height: 300px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
