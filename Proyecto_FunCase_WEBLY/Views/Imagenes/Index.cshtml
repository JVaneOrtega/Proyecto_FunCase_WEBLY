@model IEnumerable<Proyecto_FunCase_WEBLY.Models.Imagen>

@{
    ViewBag.Title = "Index";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Mis imágenes</h3>
                <p class="text-subtitle text-muted">Aquí se presentan tu ideas.</p>
            </div>
        </div>
    </div>
</div>

<div class="page-content">
    <section class="section">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header" style="text-align: right;">
                        <p class="float-start float-lg-end float-md-end float-sm-end">
                            @Html.ActionLink("Crear nuevo registro", "Create", "", new { @class = "btn btn-outline-success" })
                        </p>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-lg">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NombreImagen)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Ruta)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Estatus)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreImagen)
                                            </td>
                                            <td>
                                                <img class="img-responsive" src="@item.Ruta" height="300" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Estatus)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.ImagenID }, new { @class = "btn btn-primary rounded-pill" })
                                                @Html.ActionLink("Detalles", "Details", new { id = item.ImagenID }, new { @class = "btn btn-info rounded-pill" })

                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
