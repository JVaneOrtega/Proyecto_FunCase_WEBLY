
@{
    ViewBag.Title = "Index";
}

@model IEnumerable<Proyecto_FunCase_WEBLY.Models.Producto>
<h2>PRODUCTOS</h2>

@if (Model != null)
            {
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombre</td>
                                <td>@String.Format("{0:C}", item.Precio)</td>
                                <td>@Html.ActionLink("AGREGAR","AgregaCarrito", "Carrito", new { Id = item.Id })</td>
                            </tr>
                        }
                    </thead>
                </table>

            }

