@model Proyecto_FunCase_WEBLY.Models.Modelo

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Editar</h3>
                <p class="text-subtitle text-muted">Cambiar los datos del modelo.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end float-md-end float-sm-end">
                    <ol class="breadcrumb breadcrumb-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("IndexAdmin", "Home")">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Modeloes")">Modelos</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Editar</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section>
    <div class="row match-height">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4>Ingrese los datos</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">

                        @using (Html.BeginForm("Edit", "Modeloes", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ModeloID)
                                <div class="row">
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.MarcaID, "Marca")
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.DropDownList("MarcaID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text invalid-feedback" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Nombre)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text invalid-feedback" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Ancho)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.TextBoxFor(model => model.Ancho, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Ancho, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Alto)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.TextBoxFor(model => model.Alto, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Alto, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Grosor)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.TextBoxFor(model => model.Grosor, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Grosor, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.Estatus)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        @Html.EditorFor(model => model.Estatus, new { @class = "form-check-input" })
                                        @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <p class="form-text">Eliga un archivo solo si desea cambiar la imagen</p>
                                    <div class="col-sm-4 col-md-5 col-lg-6">
                                        @Html.LabelFor(model => model.ImagenReferencia)
                                    </div>
                                    <div class="col-sm-8 col-md-7 col-lg-6 form-group">
                                        <input type="file" id="Imagen" name="Imagen" class="form-control" />
                                        @Html.HiddenFor(model => model.ImagenReferencia)
                                        @Html.ValidationMessageFor(model => model.ImagenReferencia, "", new { @class = "form-text text-danger" })
                                    </div>
                                    <div class="col-sm-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary rounded-pill me-1 mb-1">Guardar</button>
                                        @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-light-secondary rounded-pill me-1 mb-1" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Imagen de Referencia</h4>
                </div>

                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <img src="@Model.ImagenReferencia" alt="Imagen del Modelo" style="height: 300px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
