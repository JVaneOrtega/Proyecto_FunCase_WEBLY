@model Proyecto_FunCase_WEBLY.Models.Modelo

@{
    ViewBag.Title = "Editar";
}

<h2>Editar.</h2>


@using (Html.BeginForm("Edit", "Modeloes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Modelo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ModeloID)

    <div class="mb-3 row">
        @Html.LabelFor(model => model.MarcaID, "Marca", htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.DropDownList("MarcaID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MarcaID, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Ancho, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Ancho, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ancho, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Alto, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Alto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Alto, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Grosor, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Grosor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Grosor, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Estatus, htmlAttributes: new { @class = "form-label col-lg-3 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-3 col-md-2 col-sm-2">
            <div class="checkbox">
                @Html.EditorFor(model => model.Estatus)
                @Html.ValidationMessageFor(model => model.Estatus, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <p class="form-text">Eliga un archivo solo si desea cambiar la imagen</p>
    <div class="mb-3 row">
        @Html.LabelFor(model => model.ImagenReferencia, htmlAttributes: new { @class = "form-label col-lg-4 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-4 col-md-4 col-sm-4">
            <img class="img-responsive" src="@Model.ImagenReferencia" alt="Imagen del Modelo" style="height: 120px;" />
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <input type="file" id="Imagen" name="Imagen" class="form-control" />
            @Html.HiddenFor(model => model.ImagenReferencia)
            @Html.ValidationMessageFor(model => model.ImagenReferencia, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <button type="submit" class="btn btn-info">Guardar</button>

</div>
}

<div>
    @Html.ActionLink("Volver al Lsitado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
