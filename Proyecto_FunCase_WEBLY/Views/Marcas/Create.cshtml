@model Proyecto_FunCase_WEBLY.Models.Marca

@{
    ViewBag.Title = "Crear";
}

<h2>Crear.</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Marca</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3 row">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
            <div class="col-lg-7 col-md-8 col-sm-8">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text text-danger" })
            </div>
        </div>

        <button type="submit" class="btn btn-info">Guardar</button>

    </div>
}

<div>
    @Html.ActionLink("VOLVER A INICIO", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
