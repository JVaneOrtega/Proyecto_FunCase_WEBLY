                    </div>
            </div>
            <div class="mb-3 row">
                <div class="form-group">
                    @Html.LabelFor(model => model.User.Apellido2, htmlAttributes: new { @class = "col-lg-6 col-md-4 col-sm-4 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.User.Apellido2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.User.Apellido2, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="form-group">
                    @Html.LabelFor(model => model.User.Telefono, htmlAttributes: new { @class = "col-lg-6 col-md-4 col-sm-4 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.User.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.User.Telefono, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="form-group">
                    @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "col-lg-6 col-md-4 col-sm-4 col-form-label" })
