                        @Html.EditorFor(model => model.User.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="form-group">
                    @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "col-lg-6 col-md-4 col-sm-4 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
            <button type="submit" value="Guardar" class="btn btn-info">Guardar</button>
        }
    </div>
</div>
