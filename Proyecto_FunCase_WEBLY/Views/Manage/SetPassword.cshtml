@model IdentitySample.Models.SetPasswordViewModel

<p class="text-info">
    No tienes un usuario local para este sitio. Crea una cuenta
    para que puedas axceder sin un logeo con cuentas externas.
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Crear Login Local</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="mb-3 row">
        @Html.LabelFor(m => m.NewPassword, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="mb-3 row">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Contraseña</button>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}