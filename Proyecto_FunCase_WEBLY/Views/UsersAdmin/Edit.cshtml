@model IdentitySample.Models.EditUserViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar.</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Editar Usuario.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })
    @Html.HiddenFor(model => model.Id)
    <h4>Datos personales</h4>
    <div class="mb-3 row">
        @Html.LabelFor(m => m.Nombre, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        @Html.LabelFor(m => m.Apellido1, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.TextBoxFor(m => m.Apellido1, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Apellido1, "", new { @class = "form-text text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        @Html.LabelFor(m => m.Apellido2, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.TextBoxFor(m => m.Apellido2, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Apellido2, "", new { @class = "form-text text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        @Html.LabelFor(m => m.Telefono, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <h4>Datos de usuario</h4>
    <div class="mb-3 row">
        @Html.LabelFor(m => m.Email, new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "form-text text-danger" })
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-md-2 control-label">
            Selecciona Rol del Usuario
        </label>
        <div class="col-lg-7 col-md-8 col-sm-8">
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <input type="radio" name="SelectedRoles" value="@item.Value" class="form-check-input" />
                @Html.Label(item.Value, new { @class = "form-check-label" })
            }
        </div>
    </div>

    <button type="submit" class="btn btn-info">Guardar</button>

</div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index", new { @class = "btn btn-info" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
