@model IEnumerable<Proyecto_FunCase_WEBLY.Models.Designer>

@{
    ViewBag.Title = "Index";

}

@if (User.IsInRole("Diseñador"))
{
    var Designer = Model.ToList().Where(c => c.User.UserName == User.Identity.Name).FirstOrDefault();

    <h2>Mis datos</h2>

    <div class="row">
        <div class="col-lg-6 col-md-4 col-sm-4" id="opciones">
            <div class="list-group">
                <a onclick="MostrarPerfil()" class="list-group-item" id="buttonMostrar">
                    Ver mi perfil
                </a>
                <a onclick="EditarPerfil()" class="list-group-item" id="buttonEditar">
                    Cambiar mi perfil
                </a>
            </div>
        </div>
        <div class="col-lg-6 col-md-8 col-sm-8" id="contenido">
            <div id="edit" style="display:none">
                @Html.Partial("_EditProfile", (Proyecto_FunCase_WEBLY.Models.Designer)Designer)
            </div>
            <div id="show" style="display:block">
                @Html.Partial("_Profile", (Proyecto_FunCase_WEBLY.Models.Designer)Designer)
            </div>
        </div>
    </div>

    <input type="hidden" value="@ViewBag.Initial" id="initial" />


    @section scripts
    {
        <script>
            const MostrarPerfil = () => {
                document.getElementById("show").style.display = "block";
                document.getElementById("edit").style.display = "none";
                document.getElementById("buttonMostrar").classList.add("active");
                document.getElementById("buttonEditar").classList.remove("active");
            }

            const EditarPerfil = () => {
                document.getElementById("show").style.display = "none";
                document.getElementById("edit").style.display = "block";
                document.getElementById("buttonEditar").classList.add("active");
                document.getElementById("buttonMostrar").classList.remove("active");
            }

            window.onload = () => {
                var initial = document.getElementById("initial").value;
                if (initial == 0) {
                    MostrarPerfil();
                } else {
                    EditarPerfil();
                }
            }
        </script>
    }
}
else if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Diseñadores</h3>
                    <p class="text-subtitle text-muted">Lista de diseñadores registrados.</p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end float-md-end float-sm-end">
                        <ol class="breadcrumb breadcrumb-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("IndexAdmin", "Home")">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Diseñadores</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content">
        <section class="section">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Diseñadores registrados</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-lg table-hover">
                                        <tr class="table-success">
                                            <th>
                                                @Html.DisplayNameFor(model => model.User.Nombre)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.User.Apellido1)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.User.Apellido2)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.User.Telefono)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.User.Email)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.NombrePresentacion)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.Apellido1)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.Apellido2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.Telefono)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NombrePresentacion)
                                                </td>
                                                <td>
                                                    <div class="float-start float-lg-end float-md-end float-sm-end">
                                                        @Html.ActionLink("Detalles", "Details", new { id = item.DesignerID }, new { @class = "btn btn-info rounded-pill" })
                                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.DesignerID }, new { @class = "btn btn-danger rounded-pill" })
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}
