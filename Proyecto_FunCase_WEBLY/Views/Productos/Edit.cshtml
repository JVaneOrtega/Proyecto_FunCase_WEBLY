@model Proyecto_FunCase_WEBLY.Models.Producto

@{
    ViewBag.Title = "Edit";
}

<h2>Editar.</h2>


@using (Html.BeginForm("Edit", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Producto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductoID)
    @Html.HiddenFor(model => model.MaterialID)
    @Html.HiddenFor(model => model.ModeloID)

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Total, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <div class="mb-3 row">
        @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "form-label col-lg-5 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-7 col-md-8 col-sm-8">
            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <p class="form-text">Eliga un archivo solo si desea cambiar la imagen</p>
    <div class="mb-3 row">
        @Html.LabelFor(model => model.ImagenFinal, htmlAttributes: new { @class = "form-label col-lg-4 col-md-4 col-sm-4 col-form-label" })
        <div class="col-lg-4 col-md-4 col-sm-4">
            <img class="img-responsive" src="@Model.ImagenFinal" alt="Imagen del Modelo" style="height: 120px;" />
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <input type="file" id="Imagen" name="Imagen" class="form-control" />
            @Html.HiddenFor(model => model.ImagenFinal)
            @Html.ValidationMessageFor(model => model.ImagenFinal, "", new { @class = "form-text text-danger" })
        </div>
    </div>

    <button type="submit" class="btn btn-info" style="background-color: skyblue">Guardar</button>
</div>
}

<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
