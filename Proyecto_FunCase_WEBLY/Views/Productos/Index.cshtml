@model IEnumerable<Proyecto_FunCase_WEBLY.Models.Producto>

@if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Fundas</h3>
                    <p class="text-subtitle text-muted">Lista de fundas disponibles agregadas.</p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end float-md-end float-sm-end">
                        <ol class="breadcrumb breadcrumb-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("IndexAdmin", "Home")">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Fundas</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="page-content">
        <section class="section">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-6">
                                    <h4 class="card-title">Fundas registradas</h4>
                                </div>
                                <div class="col-6">
                                    <p class="float-start float-lg-end float-md-end float-sm-end">
                                        @Html.ActionLink("Crear nuevo registro", "Create", "", new { @class = "btn btn-outline-success" })
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-lg table-hover">
                                        <tr class="table-success">
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nombre)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ImagenFinal)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Total)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Stock)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Estatus)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            <img class="img-responsive" src="@item.ImagenFinal" alt="Imagen del Producto" style="height: 100px;" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Stock)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estatus)
                                        </td>
                                        <td>
                                            <div class="float-start float-lg-end float-md-end float-sm-end">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.ProductoID }, new { @class = "btn btn-primary rounded-pill" })
                                                @Html.ActionLink("Detalles", "Details", new { id = item.ProductoID }, new { @class = "btn btn-info rounded-pill" })
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoID }, new { @class = "btn btn-danger rounded-pill" })
                                            </div>
                                        </td>
                                    </tr>
                                        }

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

}
else
{
    ViewBag.Title = "Catálogo";
    
    <h2>Catálogo.</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="card">
                    <img class="card-img-top img-responsive" src="@item.ImagenFinal" alt="Imagen del Producto" style="height: 250px;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <hr />
                        <p class="card-text">@String.Format("{0:C}", item.Total)</p>
                        <div class="row">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                @Html.ActionLink("Agregar", "Details", new { id = item.ProductoID }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
