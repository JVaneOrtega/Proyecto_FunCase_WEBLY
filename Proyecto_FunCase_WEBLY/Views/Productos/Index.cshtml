@model IEnumerable<Proyecto_FunCase_WEBLY.Models.Producto>

@if (User.IsInRole("Cliente") || User.IsInRole("Diseñador"))
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="card">
                    <img class="card-img-top img-responsive" src="@item.ImagenFinal" alt="Imagen del Producto" style="height: 250px;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <hr />
                        <p class="card-text">@String.Format("{0:C}", item.Total)</p>
                        <div class="row">
                            <input type="hidden" id="idProducto" value="@item.ProductoID" />
                            <div class="col-lg-5 col-md-5 col-sm-5" id="cantidad">
                                <input type="number" class="form-control numbers" min="0" step="1" value="1" />
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <button class="agregar btn btn-primary">Agregar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
{
    <p>
        @Html.ActionLink("CREAR NUEVO REGISTRO", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagenFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-responsive" src="@item.ImagenFinal" alt="Imagen del Producto" style="height: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("EDITAR", "Edit", new { id = item.ProductoID }) |
                    @Html.ActionLink("DETALLES", "Details", new { id = item.ProductoID }) |
                    @Html.ActionLink("ELIMINAR", "Delete", new { id = item.ProductoID })
                </td>
            </tr>
        }

    </table>

}
